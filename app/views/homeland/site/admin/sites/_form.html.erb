<%= form_for [:admin, @site] do |f| %>
  <%= render "/shared/error_messages", target: @site  %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.url_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, placeholder: "256*256", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :site_node_id %>
    <%= f.select :site_node_id, SiteNode.name_options, { include_blank: false }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.label :desc %>
    <%= f.text_area :desc, class: "form-control", rows: 3 %>
  </div>

  <div class="form-actions">
    <%= f.submit '保存', class: "btn btn-primary", 'data-disable-with' => '保存中...' %>
    <%= link_to '取消', admin_sites_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>
